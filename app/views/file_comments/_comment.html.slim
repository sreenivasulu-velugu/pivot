- if p.file_comments.size == 0
	= link_to image_tag('close.png'), '#', :title =>"Close",:class => 'hide_file_comments fr mrm', :post_id => "#{p.id}"


br
= form_for [p, FileComment.new], :multipart => true do |f|
	= f.hidden_field "user_id", :value => p.user.id

	label class="cp fl mrm" onclick="if(document.getElementById('showFile').checked){document.getElementById('dateTable').style.display='none';ajaxpage('search/farmers/view_all_q.php?farmerId=<?php echo $farmerId; ?>','getResults');}"
	input type="radio" name="file_type" id="showFile" File 

	label class="cp fl mrm" onclick="if(document.getElementById('showFile').checked){document.getElementById('dateTable').style.display='block';document.getElementById('getResults').innerHTML='';}"
	input type="radio" name="file_type" id="showFile" FAQ

	label class="cp fl mrm" onclick="if(document.getElementById('showLink').checked){document.getElementById('dateTable').style.display='block';document.getElementById('getResults').innerHTML='';}"
	input type="radio" name="file_type" id="showLink" Link

	
	br
	= text_field "file_name","upload",:placeholder =>'Enter File Name'
	.btn.btn-success.upload_container
		|	upload file
